<Window x:Class="FlipPix.UI.ComfyUIFolderSetupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="ComfyUI Folder Setup"
        Height="300"
        Width="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#1E1E1E">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0"
                   Text="ComfyUI Folder Setup"
                   FontSize="20"
                   FontWeight="Bold"
                   Foreground="White"
                   Margin="0,0,0,20"/>

        <!-- Description -->
        <TextBlock Grid.Row="1"
                   TextWrapping="Wrap"
                   Foreground="#CCCCCC"
                   Margin="0,0,0,20">
            <Run Text="Please select the root folder of your ComfyUI installation."/>
            <LineBreak/>
            <Run Text="This folder should contain an 'output' subfolder where processed images are saved."/>
        </TextBlock>

        <!-- Folder Path Input -->
        <Grid Grid.Row="2" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBox Grid.Column="0"
                     x:Name="FolderPathTextBox"
                     Text="{Binding FolderPath, UpdateSourceTrigger=PropertyChanged}"
                     Padding="8"
                     FontSize="14"
                     Background="#2D2D30"
                     Foreground="White"
                     BorderBrush="#3F3F46"
                     BorderThickness="1"/>

            <Button Grid.Column="1"
                    Content="Browse..."
                    Command="{Binding BrowseFolderCommand}"
                    Margin="10,0,0,0"
                    Padding="20,8"
                    Background="#0E639C"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"/>
        </Grid>

        <!-- Validation Status -->
        <TextBlock Grid.Row="3"
                   x:Name="ValidationTextBlock"
                   Text="{Binding ValidationMessage}"
                   Foreground="{Binding ValidationMessageColor}"
                   FontSize="12"
                   Margin="0,5,0,10"
                   TextWrapping="Wrap"/>

        <!-- Output Folder Info -->
        <TextBlock Grid.Row="4"
                   x:Name="OutputFolderTextBlock"
                   Text="{Binding OutputFolderInfo}"
                   Foreground="#888888"
                   FontSize="11"
                   Margin="0,0,0,20"
                   TextWrapping="Wrap"
                   Visibility="{Binding OutputFolderInfoVisibility}"/>

        <!-- Spacer -->
        <Border Grid.Row="5"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="6"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Content="Cancel"
                    Command="{Binding CancelCommand}"
                    Padding="30,10"
                    Margin="0,0,10,0"
                    Background="#3F3F46"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"/>
            <Button Content="Save"
                    Command="{Binding SaveCommand}"
                    IsEnabled="{Binding CanSave}"
                    Padding="30,10"
                    Background="#0E639C"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Window>
