<Window x:Class="FlipPix.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:FlipPix.UI"
        Title="FlipPix Video Processor" Height="650" Width="1200"
        WindowStartupLocation="CenterScreen"
        MinHeight="600" MinWidth="900"
        MaxHeight="900" MaxWidth="1600"
        ResizeMode="CanResize">
    
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <local:CountToVisibilityConverter x:Key="CountToVisibilityConverter"/>
        <local:FilePathToNameConverter x:Key="FilePathToNameConverter"/>
        
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
        
        <Style x:Key="SectionPanelStyle" TargetType="Border">
            <Setter Property="Background" Value="#F8F9FA"/>
            <Setter Property="BorderBrush" Value="#DEE2E6"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
        
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#007BFF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#0056B3"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#6C757D"/>
                    <Setter Property="Cursor" Value="Arrow"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#6C757D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#545B62"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#343A40" Padding="20,15">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="ðŸŽ¬" FontSize="24" Margin="0,0,10,0" VerticalAlignment="Center"/>
                <TextBlock Text="FlipPix Video Processor" 
                          FontSize="24" FontWeight="Bold" 
                          Foreground="White" VerticalAlignment="Center"/>
                <TextBlock Text="AI-Powered Video Enhancement" 
                          FontSize="12" Foreground="#ADB5BD" 
                          Margin="20,0,0,0" VerticalAlignment="Center"/>
            </StackPanel>
        </Border>
        
        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Left Panel - Input Configuration -->
                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                    
                    <!-- Video Input Section -->
                    <Border Style="{StaticResource SectionPanelStyle}">
                        <StackPanel>
                            <TextBlock Text="ðŸ“¹ Video Input" Style="{StaticResource HeaderTextStyle}"/>
                            
                            <Grid Margin="0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBox Name="VideoFilePathTextBox" 
                                        Grid.Column="0"
                                        Text="{Binding VideoFilePath, Mode=TwoWay}"
                                        IsReadOnly="True"
                                        Padding="8"
                                        Background="White"
                                        BorderBrush="#CED4DA"/>
                                
                                <Button Name="BrowseVideoButton" 
                                       Grid.Column="1"
                                       Content="Browse"
                                       Style="{StaticResource SecondaryButtonStyle}"
                                       Margin="5,0,0,0"
                                       Click="BrowseVideoButton_Click"/>
                            </Grid>
                            
                            <!-- Video Info Display -->
                            <StackPanel Name="VideoInfoPanel" Visibility="Collapsed" Margin="0,10,0,0">
                                <TextBlock Text="Video Information:" FontWeight="Bold" Margin="0,0,0,5"/>
                                <TextBlock Name="VideoInfoText" 
                                          Text="{Binding VideoInfo}"
                                          TextWrapping="Wrap"
                                          FontSize="11"
                                          Foreground="#495057"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                    
                    <!-- Style Reference Section -->
                    <Border Style="{StaticResource SectionPanelStyle}">
                        <StackPanel>
                            <TextBlock Text="ðŸŽ¨ Style Reference" Style="{StaticResource HeaderTextStyle}"/>
                            
                            <Grid Margin="0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBox Name="StyleImagePathTextBox" 
                                        Grid.Column="0"
                                        Text="{Binding StyleImagePath, Mode=TwoWay}"
                                        IsReadOnly="True"
                                        Padding="8"
                                        Background="White"
                                        BorderBrush="#CED4DA"/>
                                
                                <Button Name="BrowseStyleButton" 
                                       Grid.Column="1"
                                       Content="Browse"
                                       Style="{StaticResource SecondaryButtonStyle}"
                                       Margin="5,0,0,0"
                                       Click="BrowseStyleButton_Click"/>
                            </Grid>
                        </StackPanel>
                    </Border>
                    
                    <!-- Face Reference Section -->
                    <Border Style="{StaticResource SectionPanelStyle}">
                        <StackPanel>
                            <TextBlock Text="ðŸ‘¤ Face Reference" Style="{StaticResource HeaderTextStyle}"/>
                            
                            <Grid Margin="0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBox Name="FaceImagePathTextBox" 
                                        Grid.Column="0"
                                        Text="{Binding FaceImagePath, Mode=TwoWay}"
                                        IsReadOnly="True"
                                        Padding="8"
                                        Background="White"
                                        BorderBrush="#CED4DA"/>
                                
                                <Button Name="BrowseFaceButton" 
                                       Grid.Column="1"
                                       Content="Browse"
                                       Style="{StaticResource SecondaryButtonStyle}"
                                       Margin="5,0,0,0"
                                       Click="BrowseFaceButton_Click"/>
                            </Grid>
                        </StackPanel>
                    </Border>
                    
                    <!-- ComfyUI Settings Section -->
                    <Border Style="{StaticResource SectionPanelStyle}">
                        <StackPanel>
                            <TextBlock Text="âš™ï¸ ComfyUI Settings" Style="{StaticResource HeaderTextStyle}"/>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Server:" 
                                          VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <TextBox Grid.Row="0" Grid.Column="1" 
                                        Name="ComfyUIServerTextBox"
                                        Text="{Binding ComfyUIServer, Mode=TwoWay}"
                                        Padding="5" Margin="0,0,0,5"/>
                                
                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Port:" 
                                          VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <TextBox Grid.Row="1" Grid.Column="1" 
                                        Name="ComfyUIPortTextBox"
                                        Text="{Binding ComfyUIPort, Mode=TwoWay}"
                                        Padding="5"/>
                            </Grid>
                            
                            <Button Name="TestConnectionButton" 
                                   Content="Test Connection"
                                   Style="{StaticResource SecondaryButtonStyle}"
                                   Margin="0,10,0,0"
                                   Click="TestConnectionButton_Click"/>
                            
                            <TextBlock Name="ConnectionStatusText" 
                                      Text="{Binding ConnectionStatus}"
                                      Margin="0,5,0,0"
                                      FontSize="11"/>
                        </StackPanel>
                    </Border>
                    
                </StackPanel>
                
                <!-- Right Panel - Processing and Status -->
                <StackPanel Grid.Column="1" Margin="10,0,0,0">
                    
                    <!-- Processing Controls -->
                    <Border Style="{StaticResource SectionPanelStyle}">
                        <StackPanel>
                            <TextBlock Text="ðŸš€ Processing Controls" Style="{StaticResource HeaderTextStyle}"/>
                            
                            <CheckBox Name="IncrementalProcessingCheckBox"
                                     Content="Use Incremental Processing (81-frame chunks)"
                                     IsChecked="{Binding UseIncrementalProcessing}"
                                     Margin="0,5,0,10"
                                     ToolTip="Process video in 81-frame chunks to generate multiple output videos"/>
                            
                            <Button Name="StartProcessingButton" 
                                   Content="Start Video Processing"
                                   Style="{StaticResource PrimaryButtonStyle}"
                                   IsEnabled="{Binding CanStartProcessing}"
                                   Click="StartProcessingButton_Click"
                                   Margin="0,0,0,10"/>
                            
                            <Button Name="StopProcessingButton" 
                                   Content="Stop Processing"
                                   Style="{StaticResource SecondaryButtonStyle}"
                                   IsEnabled="{Binding CanStopProcessing}"
                                   Click="StopProcessingButton_Click"
                                   Visibility="{Binding IsProcessing, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                        </StackPanel>
                    </Border>
                    
                    
                    <!-- Processing Status -->
                    <Border Style="{StaticResource SectionPanelStyle}">
                        <StackPanel>
                            <TextBlock Text="ðŸ“Š Processing Status" Style="{StaticResource HeaderTextStyle}"/>
                            
                            <TextBlock Name="ProcessingStatusText" 
                                      Text="{Binding ProcessingStatus}"
                                      FontWeight="Bold"
                                      Margin="0,0,0,10"/>
                            
                            <TextBlock Name="ChunkProgressStatusText" 
                                      Text="{Binding ChunkProgressStatus}"
                                      FontStyle="Italic"
                                      Margin="0,0,0,5"
                                      Visibility="{Binding UseIncrementalProcessing, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                            
                            <ProgressBar Name="ProcessingProgressBar" 
                                        Value="{Binding ProcessingProgress}"
                                        Height="20"
                                        Margin="0,0,0,10"/>
                            
                            <TextBlock Name="ProgressPercentageText" 
                                      Text="{Binding ProgressPercentage}"
                                      HorizontalAlignment="Center"
                                      FontSize="11"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Workflow Steps -->
                    <Border Style="{StaticResource SectionPanelStyle}">
                        <StackPanel>
                            <TextBlock Text="ðŸ”„ Workflow Steps" Style="{StaticResource HeaderTextStyle}"/>
                            
                            <ListView Name="WorkflowStepsListView" 
                                     ItemsSource="{Binding WorkflowSteps}"
                                     Height="200"
                                     Background="White"
                                     BorderBrush="#CED4DA">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" Margin="5">
                                            <Ellipse Width="8" Height="8" 
                                                   Fill="{Binding StatusColor}" 
                                                   Margin="0,0,10,0" 
                                                   VerticalAlignment="Center"/>
                                            <TextBlock Text="{Binding StepName}" 
                                                     VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </StackPanel>
                    </Border>
                    
                    <!-- Output Video -->
                    <Border Style="{StaticResource SectionPanelStyle}"
                            Visibility="{Binding HasOutputVideo, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel>
                            <TextBlock Text="ðŸŽ¬ Generated Video" Style="{StaticResource HeaderTextStyle}"/>
                            
                            <TextBlock Text="Output Path:" FontWeight="Bold" Margin="0,0,0,5"/>
                            <TextBox Text="{Binding OutputVideoPath, Mode=OneWay}"
                                    IsReadOnly="True"
                                    Background="#F8F9FA"
                                    Padding="8"
                                    BorderBrush="#CED4DA"
                                    BorderThickness="1"
                                    TextWrapping="Wrap"
                                    FontFamily="Consolas"
                                    FontSize="11"
                                    Margin="0,0,0,10"/>
                            
                            <Button Name="OpenOutputFolderButton" 
                                   Content="ðŸ“‚ Open Output Folder"
                                   Style="{StaticResource PrimaryButtonStyle}"
                                   HorizontalAlignment="Left"
                                   Click="OpenOutputFolderButton_Click"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Generated Video Chunks -->
                    <Border Style="{StaticResource SectionPanelStyle}"
                            Visibility="{Binding GeneratedVideoChunks.Count, Converter={StaticResource CountToVisibilityConverter}, FallbackValue=Collapsed}">
                        <StackPanel>
                            <TextBlock Text="ðŸŽžï¸ Generated Video Chunks" Style="{StaticResource HeaderTextStyle}"/>
                            
                            <TextBlock Text="{Binding GeneratedVideoChunks.Count, StringFormat='Total Chunks: {0}'}" 
                                      FontWeight="Bold" 
                                      Margin="0,0,0,5"/>
                            
                            <ListBox ItemsSource="{Binding GeneratedVideoChunks}"
                                    MaxHeight="100"
                                    ScrollViewer.VerticalScrollBarVisibility="Auto"
                                    Background="#F8F9FA"
                                    BorderBrush="#CED4DA">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Converter={StaticResource FilePathToNameConverter}}"
                                                  FontFamily="Consolas"
                                                  FontSize="10"
                                                  Margin="2"/>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </StackPanel>
                    </Border>
                    
                    <!-- Enhanced Video -->
                    <Border Style="{StaticResource SectionPanelStyle}"
                            Visibility="{Binding HasEnhancedVideo, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel>
                            <TextBlock Text="ðŸš€ Enhanced Video (4x + 60fps)" Style="{StaticResource HeaderTextStyle}"/>
                            
                            <TextBlock Text="Final Enhanced Output:" FontWeight="Bold" Margin="0,0,0,5"/>
                            <TextBox Text="{Binding EnhancedVideoPath, Mode=OneWay}"
                                    IsReadOnly="True"
                                    Background="#E8F5E8"
                                    Padding="8"
                                    BorderBrush="#28A745"
                                    BorderThickness="2"
                                    TextWrapping="Wrap"
                                    FontFamily="Consolas"
                                    FontSize="11"
                                    Margin="0,0,0,10"/>
                            
                        </StackPanel>
                    </Border>
                    
                    <!-- Log Output -->
                    <Border Style="{StaticResource SectionPanelStyle}">
                        <StackPanel>
                            <TextBlock Text="ðŸ“ Processing Log" Style="{StaticResource HeaderTextStyle}"/>
                            
                            <ScrollViewer Height="150" 
                                         VerticalScrollBarVisibility="Auto"
                                         Background="#F8F9FA">
                                <TextBox Name="LogOutputTextBox" 
                                        Text="{Binding LogOutput}"
                                        TextWrapping="Wrap"
                                        IsReadOnly="True"
                                        FontFamily="Consolas"
                                        FontSize="10"
                                        Background="Transparent"
                                        BorderThickness="0"/>
                            </ScrollViewer>
                            
                            <Button Name="ClearLogButton" 
                                   Content="Clear Log"
                                   Style="{StaticResource SecondaryButtonStyle}"
                                   HorizontalAlignment="Right"
                                   Margin="0,5,0,0"
                                   Click="ClearLogButton_Click"/>
                        </StackPanel>
                    </Border>
                    
                </StackPanel>
                
            </Grid>
        </ScrollViewer>
        
        <!-- Status Bar -->
        <StatusBar Grid.Row="2" Background="#F8F9FA" BorderBrush="#DEE2E6" BorderThickness="0,1,0,0">
            <StatusBarItem>
                <TextBlock Name="StatusBarText" Text="{Binding StatusBarMessage}"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock Name="TimestampText" Text="{Binding CurrentTime}"/>
            </StatusBarItem>
        </StatusBar>
        
    </Grid>
</Window>