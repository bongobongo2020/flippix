<Window x:Class="FlipPix.UI.FlipPixWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="FlipPix - Transform Camera Angles" Height="700" Width="950"
        WindowStartupLocation="CenterScreen"
        MinHeight="600" MinWidth="850"
        ResizeMode="CanResize">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <Style x:Key="SectionPanelStyle" TargetType="Border">
            <Setter Property="Background" Value="#F8F9FA"/>
            <Setter Property="BorderBrush" Value="#DEE2E6"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF6B35"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF8556"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#CCC"/>
                    <Setter Property="Cursor" Value="Arrow"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#66BB6A"/>
                </Trigger>
            </Style.Triggers>
        </Style>

    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#FF6B35" Offset="0"/>
                    <GradientStop Color="#F7931E" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <StackPanel Margin="25,20">
                <TextBlock Text="ðŸ“· FlipPix"
                          FontSize="28" FontWeight="Bold"
                          Foreground="White"/>
                <TextBlock Text="Transform images with intelligent camera angle and perspective controls"
                          FontSize="13" Foreground="#FFFAF0"
                          Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20,15,20,15">

                <!-- Image Section - Side by Side -->
                <Border Style="{StaticResource SectionPanelStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Input Image -->
                        <StackPanel Grid.Column="0" Margin="0,0,10,0">
                            <TextBlock Text="ðŸ“¤ Input Image" Style="{StaticResource HeaderTextStyle}" Foreground="#FF6B35"/>

                            <Border BorderBrush="#DEE2E6" BorderThickness="2"
                                    Background="White" Height="250"
                                    CornerRadius="5" Margin="0,0,0,10">
                                <Grid>
                                    <TextBlock Text="No image selected"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Foreground="#999"
                                              FontStyle="Italic">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding ImagePreviewSource}" Value="{x:Null}">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <Image Source="{Binding ImagePreviewSource}"
                                           Stretch="Uniform"/>
                                </Grid>
                            </Border>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox Grid.Column="0"
                                        Text="{Binding ImageFilePath, Mode=TwoWay}"
                                        IsReadOnly="True"
                                        Padding="8"
                                        Background="White"
                                        BorderBrush="#CED4DA"
                                        FontSize="11"/>
                                <Button Grid.Column="1"
                                       Content="Browse"
                                       Style="{StaticResource SecondaryButtonStyle}"
                                       Margin="8,0,0,0"
                                       Command="{Binding SelectImageCommand}"/>
                            </Grid>
                            <TextBlock Text="{Binding ImageInfo}"
                                      FontStyle="Italic"
                                      Foreground="#666"
                                      FontSize="10"
                                      Margin="0,5,0,0"/>
                        </StackPanel>

                        <!-- Result Image -->
                        <StackPanel Grid.Column="1" Margin="10,0,0,0">
                            <TextBlock Text="âœ¨ Result Image" Style="{StaticResource HeaderTextStyle}" Foreground="#FF6B35"/>

                            <Border BorderBrush="#DEE2E6" BorderThickness="2"
                                    Background="White" Height="250"
                                    CornerRadius="5" Margin="0,0,0,10">
                                <Grid>
                                    <TextBlock Text="Result will appear here"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Foreground="#999"
                                              FontStyle="Italic">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding ResultPreviewSource}" Value="{x:Null}">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <Image Source="{Binding ResultPreviewSource}"
                                           Stretch="Uniform"/>
                                </Grid>
                            </Border>

                            <Button Content="ðŸ“‚ Open Result Folder"
                                   Style="{StaticResource SecondaryButtonStyle}"
                                   Command="{Binding OpenResultFolderCommand}"
                                   IsEnabled="{Binding HasResultImage}"
                                   HorizontalAlignment="Stretch"
                                   Margin="0,0,0,8"/>

                            <Button Content="ðŸŽ¬ Create Video"
                                   Command="{Binding CreateVideoCommand}"
                                   IsEnabled="{Binding HasResultImage}"
                                   HorizontalAlignment="Stretch">
                                <Button.Style>
                                    <Style TargetType="Button" BasedOn="{StaticResource SecondaryButtonStyle}">
                                        <Setter Property="Background" Value="#6A4C93"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#8D6CAD"/>
                                            </Trigger>
                                            <Trigger Property="IsEnabled" Value="False">
                                                <Setter Property="Background" Value="#CCC"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Camera Control and Processing Section -->
                <Border Style="{StaticResource SectionPanelStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Camera Control -->
                        <StackPanel Grid.Column="0" Margin="0,0,20,0">
                            <TextBlock Text="ðŸŽ¥ Camera Control" Style="{StaticResource HeaderTextStyle}" Foreground="#FF6B35"/>

                            <TextBlock Text="Preset" FontWeight="SemiBold" FontSize="12" Margin="0,0,0,5"/>
                            <ComboBox ItemsSource="{Binding CameraControlOptions}"
                                     SelectedValue="{Binding SelectedCameraControl, Mode=TwoWay}"
                                     SelectedValuePath="Name"
                                     Padding="10,8"
                                     FontSize="13"
                                     Margin="0,0,0,15">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding Icon}" FontSize="16" Margin="0,0,8,0"/>
                                            <TextBlock Text="{Binding Name}" FontWeight="SemiBold"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>

                            <TextBlock Text="Camera Instruction" FontWeight="SemiBold" FontSize="12" Margin="0,0,0,5"/>
                            <TextBox Text="{Binding CustomPrompt, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    TextWrapping="Wrap"
                                    AcceptsReturn="True"
                                    Height="85"
                                    Padding="10"
                                    VerticalScrollBarVisibility="Auto"
                                    Background="White"
                                    BorderBrush="#CED4DA"
                                    FontSize="12"
                                    Margin="0,0,0,10"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Button Grid.Column="0"
                                       Content="ðŸ’¾ Save Prompt"
                                       Style="{StaticResource SecondaryButtonStyle}"
                                       Command="{Binding SaveCustomPromptCommand}"
                                       HorizontalAlignment="Stretch"
                                       Margin="0,0,8,0"/>

                                <Button Grid.Column="1"
                                       Content="ðŸ—‘ï¸ Delete Saved"
                                       Command="{Binding DeleteSavedPromptCommand}"
                                       HorizontalAlignment="Right">
                                    <Button.Style>
                                        <Style TargetType="Button" BasedOn="{StaticResource SecondaryButtonStyle}">
                                            <Setter Property="Background" Value="#DC3545"/>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#E55563"/>
                                                </Trigger>
                                                <Trigger Property="IsEnabled" Value="False">
                                                    <Setter Property="Background" Value="#CCC"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </Grid>
                        </StackPanel>

                        <!-- Process Image and Status -->
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <Button Content="ðŸš€ Process Image"
                                   Style="{StaticResource PrimaryButtonStyle}"
                                   Command="{Binding ProcessImageCommand}"
                                   HorizontalAlignment="Stretch"
                                   Height="50"
                                   FontSize="14"
                                   Margin="0,0,0,15"/>

                            <!-- Processing Status -->
                            <Border Background="#FFF9F0"
                                    BorderBrush="#FFE0B0"
                                    BorderThickness="1"
                                    CornerRadius="5"
                                    Padding="12"
                                    Visibility="{Binding IsProcessing, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <StackPanel>
                                    <TextBlock Text="{Binding ProcessingStatus}"
                                              FontWeight="SemiBold"
                                              FontSize="11"
                                              Margin="0,0,0,5"
                                              TextAlignment="Center"/>
                                    <ProgressBar Value="{Binding ProcessingProgress}"
                                                Height="16"
                                                Foreground="#FF6B35"
                                                Margin="0,0,0,5"/>
                                    <TextBlock Text="{Binding ProgressPercentage}"
                                              HorizontalAlignment="Center"
                                              FontSize="11"
                                              FontWeight="Bold"
                                              Foreground="#FF6B35"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Advanced Settings (Collapsible) -->
                <Expander Header="âš™ï¸ Advanced Settings"
                         Margin="0,0,0,15"
                         IsExpanded="False">
                    <Border Background="#F8F9FA"
                            BorderBrush="#DEE2E6"
                            BorderThickness="1"
                            CornerRadius="5"
                            Padding="15"
                            Margin="0,8,0,0">
                        <StackPanel>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Steps -->
                                <StackPanel Grid.Column="0" Margin="0,0,15,0">
                                    <TextBlock Text="Steps" FontWeight="SemiBold" FontSize="11" Margin="0,0,0,5"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Slider Grid.Column="0"
                                                Value="{Binding Steps, Mode=TwoWay}"
                                                Minimum="1" Maximum="20"
                                                TickFrequency="1"
                                                IsSnapToTickEnabled="True"
                                                VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="1"
                                                  Text="{Binding Steps}"
                                                  Margin="8,0,0,0"
                                                  VerticalAlignment="Center"
                                                  MinWidth="25"
                                                  FontWeight="Bold"/>
                                    </Grid>
                                </StackPanel>

                                <!-- CFG -->
                                <StackPanel Grid.Column="1" Margin="0,0,15,0">
                                    <TextBlock Text="CFG Scale" FontWeight="SemiBold" FontSize="11" Margin="0,0,0,5"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Slider Grid.Column="0"
                                                Value="{Binding Cfg, Mode=TwoWay}"
                                                Minimum="1" Maximum="10"
                                                TickFrequency="0.5"
                                                IsSnapToTickEnabled="True"
                                                VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="1"
                                                  Text="{Binding Cfg, StringFormat={}{0:F1}}"
                                                  Margin="8,0,0,0"
                                                  VerticalAlignment="Center"
                                                  MinWidth="25"
                                                  FontWeight="Bold"/>
                                    </Grid>
                                </StackPanel>

                                <!-- Denoise -->
                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Denoise" FontWeight="SemiBold" FontSize="11" Margin="0,0,0,5"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Slider Grid.Column="0"
                                                Value="{Binding Denoise, Mode=TwoWay}"
                                                Minimum="0" Maximum="1"
                                                TickFrequency="0.05"
                                                IsSnapToTickEnabled="True"
                                                VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="1"
                                                  Text="{Binding Denoise, StringFormat={}{0:F2}}"
                                                  Margin="8,0,0,0"
                                                  VerticalAlignment="Center"
                                                  MinWidth="25"
                                                  FontWeight="Bold"/>
                                    </Grid>
                                </StackPanel>
                            </Grid>

                            <!-- Negative Prompt -->
                            <StackPanel Margin="0,15,0,0">
                                <TextBlock Text="Negative Prompt" FontWeight="SemiBold" FontSize="11" Margin="0,0,0,5"/>
                                <TextBox Text="{Binding NegativePrompt, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        TextWrapping="Wrap"
                                        AcceptsReturn="True"
                                        Height="50"
                                        Padding="8"
                                        Background="White"
                                        BorderBrush="#CED4DA"
                                        FontSize="11"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Expander>

                <!-- Log (Collapsible) -->
                <Expander Header="ðŸ“ Processing Log"
                         IsExpanded="True"
                         Margin="0,0,0,0">
                    <Border Background="White"
                            BorderBrush="#DEE2E6"
                            BorderThickness="1"
                            Margin="0,8,0,0">
                        <ScrollViewer MaxHeight="150"
                                     VerticalScrollBarVisibility="Auto">
                            <TextBox Text="{Binding LogOutput}"
                                    TextWrapping="Wrap"
                                    IsReadOnly="True"
                                    FontFamily="Consolas"
                                    FontSize="10"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Padding="10"/>
                        </ScrollViewer>
                    </Border>
                </Expander>

            </StackPanel>
        </ScrollViewer>

        <!-- Status Bar -->
        <StatusBar Grid.Row="2" Background="#F8F9FA" BorderBrush="#DEE2E6" BorderThickness="0,1,0,0" Height="28">
            <StatusBarItem>
                <TextBlock Text="{Binding StatusBarMessage}" FontSize="11"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="ComfyUI: " FontSize="11" Foreground="#666"/>
                    <TextBlock Text="{Binding ComfyUIServer}" FontSize="11" FontWeight="Bold"/>
                    <TextBlock Text=":" FontSize="11"/>
                    <TextBlock Text="{Binding ComfyUIPort}" FontSize="11" FontWeight="Bold"/>
                </StackPanel>
            </StatusBarItem>
        </StatusBar>

    </Grid>
</Window>
